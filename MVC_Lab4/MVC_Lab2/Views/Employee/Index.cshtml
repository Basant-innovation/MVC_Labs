@model List<Employee>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            @Html.ActionLink("MVC LABs", "Index", "Home", null, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-item nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact us", "ContactUs", "Home", null, new { @class = "nav-item nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Employees", "Index", "Employee", null, new { @class = "nav-item nav-link" })
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container m-5">
            
            @Html.ActionLink("Add Employee", "EmployeeForm", "Employee", null, new {@class = "btn btn-primary" })
            <hr/>
            @if (Model != null && Model.Count > 0)
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Address</th>
                            <th>Salary</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Employee emp in Model)
                        {
                            @*@Html.Action("EmployeePartial", new { id = emp.Id })*@
                            @Html.Partial("_EmployeePartial", emp);
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">There are No employees found</div>
            }

        </div>

    </div>
</body>
</html>
