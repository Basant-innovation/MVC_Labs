@model List<Employee>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee List";
}

@Html.ActionLink("Add Employee", "EmployeeForm", "Employee", null, new { @class = "btn btn-primary" })
<hr />
@if (Model != null && Model.Count > 0)
            {
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Employee emp in Model)
            {
                @*@Html.Action("EmployeePartial", new { id = emp.Id })*@
                @Html.Partial("_EmployeePartial", emp);
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">There are No employees found</div>
}


@section Scripts{
    <script>
        function confirmDelete(id) {
            let res = confirm("Are you sure?");
            if (res) {
                $.ajax({
                    url: `Employee/Delete/${id}`,
                    type: "POST",
                    success: function(response){
                        if (response) {
                            let tr = $(`#${id}`);
                            tr.remove();
                        }
                    },
                    error: function(xhr, status, err){
                        console.log(err);
                    }
                })
            }
        }
    </script>
}
